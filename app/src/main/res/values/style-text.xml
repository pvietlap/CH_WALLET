<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="TextView.Medium.Medium" parent="DefaultTextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextView.Medium.Light" parent="DefaultTextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextView.Medium.Medium.Bold" parent="TextView.Medium.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>